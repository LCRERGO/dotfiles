# Cleanup variables
# Password Store Directory
export PASSWORD_STORE_DIR="${XDG_DATA_HOME}/pass"
# Node config and history files
export NPM_CONFIG_USERCONFIG="${XDG_CONFIG_HOME}/npm/npmrc"
export NODE_REPL_HISTORY="${XDG_DATA_HOME}/node_repl_history"
# Less cleanup
export LESSKEY="${XDG_CONFIG_HOME}/less/lesskey"
export LESSHISTFILE="${XDG_CACHE_HOME}/less/history"
# Readline Wrapper history
export RLWRAP_HOME="${XDG_DATA_HOME}/rlwrap"
# Stack directory
export STACK_ROOT="${XDG_DATA_HOME}/stack"
# Rust directory
export RUSTUP_HOME="${XDG_DATA_HOME}/rustup"
export CARGO_HOME="${XDG_DATA_HOME}/cargo"
# Go directory
export GOROOT="${XDG_DATA_HOME}/go"
export GOPATH="${HOME}/.local/bin/go"
export PATH="${PATH}:${GOPATH}/bin"
# Java directory (not fully compliant)
export JAVA_OPTIONS="-Djava.util.prefs.user.Root=${XDG_CONFIG_HOME}/java"
# Ruby Bundler directories
export BUNDLE_USER_CONFIG="${XDG_CONFIG_HOME}"/bundle
export BUNDLE_USER_CACHE="${XDG_CACHE_HOME}"/bundle
export BUNDLE_USER_PLUGIN="${XDG_DATA_HOME}"/bundle
# Ruby Gem directories
export GEM_HOME="${XDG_DATA_HOME}"/gem
export GEM_SPEC_CACHE="${XDG_CACHE_HOME}"/gem
# wget config file
export WGETRC="${XDG_CONFIG_HOME}/wgetrc"
# Vagrant directories
export VAGRANT_HOME="${XDG_DATA_HOME}/vagrant"
export VAGRANT_ALIAS_FILE="${XDG_DATA_HOME}/vagrant/aliases"
# Docker directory
# deativated because of podman use
#export DOCKER_CONFIG="${XDG_CONFIG_HOME}/docker"
# GTK directories
export GTK2_RC_FILES="${XDG_CONFIG_HOME}/gtk-2.0/gtkrc"
# Jupyter directories
export IPYTHONDIR="${XDG_CONFIG_HOME}/jupyter"
export JUPYTER_CONFIG_DIR="${XDG_CONFIG_HOME}/jupyter"
# AWS files
export AWS_SHARED_CREDENTIALS_FILE="${XDG_CONFIG_HOME}/aws/credentials"
export AWS_CONFIG_FILE="${XDG_CONFIG_HOME}/aws/config"
# WINE prefix
export WINEPREFIX="${XDG_DATA_HOME}/wineprefixes/default"
# Android Studio directory
export ANDROID_HOME="${XDG_DATA_HOME}/android"
# Cabal directories
export CABAL_CONFIG="${XDG_CONFIG_HOME}/cabal/config"
export CABAL_DIR="${XDG_DATA_HOME}/cabal"
