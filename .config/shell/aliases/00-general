# General Aliases

# Default aliases
alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -v" \
    ln="ln -v" \
    ls="ls -h --color=auto --group-directories-first" \
    la="ls -a --color=auto --group-directories-first" \
    ll="ls -lh --color=auto --group-directorues-first" \
    grep="grep --color=auto" \
    diff="diff --color=auto" \
    ip="ip --color" \
    ccat="highlight --out-format=ansi"
